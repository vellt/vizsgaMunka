<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:vizsgaMunka.ResourcesDictionaries">
    <Style x:Key="menuFiokBeall" TargetType="Button">
        <Style.Resources>
            <Style TargetType="Grid">
                <Setter Property="Background" Value="#F6F6F6"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=memuGridFiokBeallitas, Path=IsMouseOver}" Value="True">
                        <Setter Property="Background" Value="#F1F1F1"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="menuKijelentkezes" TargetType="Button">
        <Style.Resources>
            <Style TargetType="Grid">
                <Setter Property="Background" Value="#F6F6F6"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=memuGridKijelentkezes, Path=IsMouseOver}" Value="True">
                        <Setter Property="Background" Value="#F1F1F1"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Style.Resources>
    </Style>

</ResourceDictionary>