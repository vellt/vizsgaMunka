<UserControl x:Class="vizsgaMunka.DesignPatterns.TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vizsgaMunka.DesignPatterns"
             mc:Ignorable="d" d:DesignWidth="300">
    <Border Margin="0 10" BorderBrush="LightGray" BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
            <TextBox x:Name="txbtartalom" Padding="5 -1" BorderThickness="0" VerticalContentAlignment="Center" Foreground="#5D5D5D" FontFamily="Segoe UI" TextWrapping="NoWrap"/>
        </ScrollViewer>
    </Border>
</UserControl>
